<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="serviceInfoProvider"
          init-method="loadConfig"
          class="net.es.nsi.pce.config.nsa.JsonNsaConfigProvider"
          scope="singleton">
        <property name="filename"
                  value="src/test/resources/config/nsa.json"/>
    </bean>
    <bean id="authProvider"
          class="net.es.nsi.pce.config.nsa.auth.NsaConfigAuthProvider"
          scope="singleton">
    </bean>

    <bean id="dbAuthProvider"
          class="net.es.nsi.pce.config.nsa.auth.DbClientAuthProvider"
          scope="singleton">
        <property name="authDbUrl" value="http://localhost:8402/" />
        <property name="nsaDbUrl" value="http://localhost:8403/" />
    </bean>

    <bean id="httpConfigProvider"
          class="net.es.nsi.pce.config.http.JsonHttpConfigProvider"
          init-method="loadConfig"
          scope="singleton">
        <property name="filename"
                  value="src/test/resources/config/http.json"/>
    </bean>
    <bean id="topologyProvider"
          class="net.es.nsi.pce.config.topo.JsonTopologyProvider"
          scope="singleton">
        <property name="filename"
                  value="src/test/resources/config/topo.json"/>
    </bean>

    <bean id="DijkstraPCE" class="net.es.nsi.pce.pf.DijkstraPCE" scope="singleton">
    </bean>
    <bean id="AuthPCE" class="net.es.nsi.pce.pf.AuthPCE" scope="singleton">
    </bean>
    <bean id="PretendPCE" class="net.es.nsi.pce.pf.PretendPCE" scope="singleton">
    </bean>


    <bean id="chainPCE"
          class="net.es.nsi.pce.pf.SequentialPCE"
          scope="singleton">
        <property name="moduleList">
            <list>
                <ref bean="AuthPCE" />
                <ref bean="DijkstraPCE" />
            </list>
        </property>
    </bean>
    <bean id="treePCE"
          class="net.es.nsi.pce.pf.SequentialPCE"
          scope="singleton">
        <property name="moduleList">
            <list>
                <ref bean="PretendPCE" />
            </list>
        </property>
    </bean>

</beans>